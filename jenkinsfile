pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout source code from version control
                git 'https://github.com/your/repository.git'
            }
        }

        stage('Build') {
            steps {
                // Build your application
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                // Run tests
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                // Deploy your application
                sh 'kubectl apply -f deployment.yaml'
            }
        }
    }
}
